<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="368dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:id="@+id/btnTest"
            android:height="75dp"
            android:background="#7bcae3"
            android:onClick="RunRequest"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NavUP Socket Test"
            android:id="@+id/txtMainTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Longsword Data Module"
            android:id="@+id/txtGroupDetails"
            android:layout_below="@+id/txtMainTitle"
            android:layout_alignRight="@+id/txtMainTitle"
            android:layout_alignEnd="@+id/txtMainTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Device Mac Address:"
            android:id="@+id/lblMacAddress"
            android:layout_below="@+id/txtGroupDetails"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="54dp"
            android:paddingBottom="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_below="@+id/lblMacAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnTest"
            android:layout_alignEnd="@+id/btnTest"
            android:background="#fff"
            android:height="50dp"
            android:paddingTop="15dp"
            android:text="00:0a:95:9d:68:16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Response from server:"
            android:id="@+id/lblRequestResponse"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:background="#fff"
            android:height="50dp"
            android:paddingTop="15dp"
            android:width="50dp"
            android:text="waiting..."
            android:layout_marginBottom="41dp"
            android:layout_above="@+id/btnTest"
            android:layout_alignRight="@+id/txtGroupDetails"
            android:layout_alignEnd="@+id/txtGroupDetails"
            android:layout_alignLeft="@+id/txtMainTitle"
            android:layout_alignStart="@+id/txtMainTitle" />

    </RelativeLayout>
